<% include ./partials/header.ejs %>

  <!-- Main Content -->
  <div class="post w-full min-h-screen bg-zinc-800 text-white">
    <main class="container mx-auto px-4 py-6 pt-[4.5rem]">
      <!-- Post Content -->
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-2 gap-6">
        <!-- Post Card -->
        <div
          class="bg-zinc-800 rounded-lg overflow-hidden shadow-md flex justify-center items-center max-w-full h-auto max-h-96">

          <img class="rounded-md" src="/images/uploads/<%= post.image %>" alt="<%= post.title %>"
            class="w-auto h-auto object-cover inline-block" />
        </div>
        <div class="px-4 py-1">
          <h3 class="text-lg font-semibold text-slate-100">
            <%= post.title %>
          </h3>
          <p class="text-slate-300">
            <%= post.description %>
          </p>
        </div>
      </div>
    </main>
  </div>

  <% include ./partials/footer.ejs %>